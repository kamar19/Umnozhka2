<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/listItemNameUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1.5"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/listItemDateLesson"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/listItemDateLesson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1.7"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toEndOf="@+id/listItemNameUser"
            app:layout_constraintEnd_toStartOf="@+id/listItemCountPoints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/listItemCountPoints"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1.5"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toEndOf="@+id/listItemDateLesson"
            app:layout_constraintEnd_toStartOf="@+id/listItemStringPrimerovTasks"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/listItemStringPrimerovTasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="2"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toEndOf="@+id/listItemCountPoints"
            app:layout_constraintEnd_toStartOf="@+id/listItemStringMDSA"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/listItemStringMDSA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toEndOf="@+id/listItemStringPrimerovTasks"
            app:layout_constraintEnd_toStartOf="@+id/listItemStringMultiplyNumbers"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/listItemStringMultiplyNumbers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toEndOf="@+id/listItemStringMDSA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
